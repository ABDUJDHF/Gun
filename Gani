local player = game.Players.LocalPlayer
local gunName = "gani gun"

local tool = Instance.new("Tool")
tool.Name = gunName
tool.RequiresHandle = false

local aimPart = Instance.new("Part")
aimPart.Size = Vector3.new(0.2, 0.2, 0.2)
aimPart.BrickColor = BrickColor.new("Bright red")
aimPart.Material = Enum.Material.Neon
aimPart.Anchored = true
aimPart.CanCollide = false
aimPart.Parent = workspace

local function updateAim()
aimPart.CFrame = player.Character.Head.CFrame * CFrame.new(0, 0, -50)
end

game:GetService("RunService").RenderStepped:Connect(updateAim)

local function fireGunAtMouse(target)
if target and target.Parent then
local humanoid = target.Parent:FindFirstChild("Humanoid")
if humanoid then
humanoid.Health = 0
humanoid:SetStateEnabled(Enum.HumanoidStateType.Dead, false)
end
end
end

tool.Activated:Connect(function()
local mouse = player:GetMouse()
fireGunAtMouse(mouse.Target)
end)

tool.Parent = player.Backpack
